{
  "type": "object",
  "required": [ "account", "email" ],
  "properties": {
    "account": {
      "type": "string"
    },
    "email": {
      "type": "object",
      "anyOf": [
        { "required": [ "to", "html" ] },
        { "required": [ "cc", "html" ] },
        { "required": [ "bcc", "html" ] },
        { "required": [ "to", "text" ] },
        { "required": [ "cc", "text" ] },
        { "required": [ "bcc", "text" ] }
      ],
      "properties": {
        "from": {
          "type": "string",
          "required": true
        },
        "sender": {
          "type": "string",
          "format": "email"
        },
        "to": {
          "oneOf": [
            {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string",
                "format": "email"
              }
            },
            {
              "type": "string"
            }
          ]
        },
        "cc": {
          "oneOf": [
            {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string",
                "format": "email"
              }
            },
            {
              "type": "string"
            }
          ]
        },
        "bcc": {
          "oneOf": [
            {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string",
                "format": "email"
              }
            },
            {
              "type": "string"
            }
          ]
        },
        "replyTo": {
          "type": "string",
          "format": "email"
        },
        "inReplyTo": {
          "type": "string"
        },
        "references": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "subject": {
          "type": "string"
        },
        "text": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "object"
            }
          ]
        },
        "html": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "object"
            }
          ]
        },
        "watchHtml": {
          "type": "string"
        },
        "priority": {
          "type": "string",
          "enum": [ "high", "normal", "low" ]
        },
        "headers": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "object",
                "required": [ "key" ],
                "properties": {
                  "key": {
                    "type": "string",
                    "minLength": 1
                  },
                  "value": {
                    "type": "string"
                  }
                }
              }
            },
            {
              "type": "object"
            }
          ]
        },
        "alternatives": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "filename": {
                "type": "string"
              },
              "cid": {
                "type": "string"
              },
              "content": {
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "object"
                  }
                ]
              },
              "encoding": {
                "type": "string"
              },
              "contentType": {
                "type": "string"
              },
              "contentDisposition": {
                "type": "string"
              }
            }
          }
        },
        "attachments": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "filename": {
                "type": "string"
              },
              "cid": {
                "type": "string"
              },
              "content": {
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "object"
                  }
                ]
              },
              "encoding": {
                "type": "string"
              },
              "contentType": {
                "type": "string"
              },
              "contentDisposition": {
                "type": "string"
              }
            }
          }
        },
        "envelope": {
          "type": "object",
          "properties": {
            "from": {
              "type": "string"
            },
            "to": {
              "type": "string"
            }
          }
        },
        "messageId": {
          "type": "string"
        },
        "date": {
          "type": "string"
        },
        "encoding": {
          "type": "string"
        }
      }
    }
  }
}