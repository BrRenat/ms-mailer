{
  "type": "object",
  "anyOf": [
    { "required": [ "auth", "host", "port" ] },
    { "required": [ "service", "auth" ] }
  ],
  "properties": {
    "service": {
      "type": "string"
    },
    "host": {
      "type": "string"
    },
    "port": {
      "oneOf": [
        { "type": "string" },
        { "type": "integer" }
      ]
    },
    "secure": {
      "type": "boolean"
    },
    "auth": {
      "type": "object",
      "anyOf": [
        {
          "required": [ "user", "pass" ]
        },
        {
          "required": [ "user", "xoauth2" ]
        }
      ],
      "properties": {
        "user": {
          "type": "string",
          "format": "email"
        },
        "pass": {
          "type": "string",
          "minLength": 1
        },
        "xoauth2": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "ignoreTLS": {
      "type": "boolean"
    },
    "name": {
      "type": "string"
    },
    "localAddress": {
      "type": "string"
    },
    "connectionTimeout": {
      "type": "integer"
    },
    "greetingTimeout": {
      "type": "integer"
    },
    "socketTimeout": {
      "type": "integer"
    },
    "debug": {
      "type": "boolean"
    },
    "authMethod": {
      "type": "string"
    },
    "tls": {
      "type": "object"
    }
  }
}