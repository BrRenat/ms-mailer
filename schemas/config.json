{
  "id": "config",
  "type": "object",
  "required": [ "amqp" ],
  "properties": {
    "debug": {
      "type": "boolean"
    },
    "amqp": {
      "type": "object",
      "required": [ "neck", "prefix" ],
      "properties": {
        "neck": {
          "type": "integer",
          "min": 0
        },
        "prefix": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "predefinedLimits": {
      "type": "object"
    },
    "htmlToText": {
      "type": "object"
    }
  }
}