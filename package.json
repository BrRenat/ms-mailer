{
  "name": "ms-mailer",
  "version": "1.0.0",
  "description": "microservice mailer, incorporates nodemailer functionality with a number of useful plugins over smtp pool transport and amqp messageing layer",
  "main": "./lib/index.js",
  "scripts": {
    "compile": "./node_modules/.bin/babel -d ./lib ./src",
    "prepublish": "npm run compile",
    "pretest": "if [[ \"$SKIP_REBUILD\" != \"1\" ]]; then npm rebuild; fi",
    "test": "./node_modules/.bin/mocha",
    "start": "node ./bin/mservice.js | ./node_modules/.bin/bunyan -o short"
  },
  "keywords": [
    "microservice",
    "amqp",
    "nodemailer",
    "mailer",
    "smtp"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/makeomatic/ms-mailer.git"
  },
  "author": "Vitaly Aminev <v@makeomatic.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/makeomatic/ms-mailer/issues"
  },
  "homepage": "https://github.com/makeomatic/ms-mailer#readme",
  "devDependencies": {
    "babel-cli": "^6.4.0",
    "babel-eslint": "^5.0.0-beta6",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.3.13",
    "chai": "^3.4.1",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^3.1.0",
    "eslint-plugin-mocha": "^1.0.0",
    "json": "^9.0.3",
    "mocha": "^2.3.3",
    "smtp-server": "^1.7.1"
  },
  "dependencies": {
    "bluebird": "^3.1.1",
    "bunyan": "^1.5.1",
    "common-errors": "^0.5.3",
    "lodash": "^3.10.1",
    "ms-amqp-conf": "^0.2.0",
    "ms-amqp-transport": "^0.11.2",
    "ms-validation": "^1.0.1",
    "mservice": "^1.2.3",
    "nconf": "^0.8.2",
    "nodemailer": "^2.0.0",
    "nodemailer-dkim": "^1.0.3",
    "nodemailer-html-to-text": "^1.0.2",
    "nodemailer-plugin-inline-base64": "^1.0.1"
  }
}
