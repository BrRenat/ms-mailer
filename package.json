{
  "name": "ms-mailer",
  "version": "0.6.0",
  "description": "microservice mailer, incorporates nodemailer functionality with a number of useful plugins over smtp pool transport and amqp messageing layer",
  "main": "./lib/index.js",
  "scripts": {
    "compile": "if [[ $NODE_ENV != \"production\" ]]; then ./node_modules/.bin/babel -d ./lib --optional es7.objectRestSpread,es7.classProperties,es7.decorators ./src; fi",
    "prepublish": "npm run compile",
    "pretest": "if [[ $NODE_ENV == \"docker\" ]]; then npm rebuild; fi",
    "test": "./node_modules/.bin/mocha --require ./test/babelhook.js --bail --timeout 10000 -R spec",
    "start": "node ./bin/mservice.js | ./node_modules/.bin/bunyan -o short"
  },
  "keywords": [
    "microservice",
    "amqp",
    "nodemailer",
    "mailer",
    "smtp"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/makeomatic/ms-mailer.git"
  },
  "author": "Vitaly Aminev <v@makeomatic.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/makeomatic/ms-mailer/issues"
  },
  "homepage": "https://github.com/makeomatic/ms-mailer#readme",
  "devDependencies": {
    "babel-core": "^5.8.34",
    "babel-eslint": "^4.1.6",
    "chai": "^3.4.1",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^2.1.0",
    "eslint-plugin-mocha": "^1.0.0",
    "json": "^9.0.3",
    "mocha": "^2.3.3",
    "smtp-server": "^1.7.1"
  },
  "dependencies": {
    "bluebird": "^3.0.6",
    "bunyan": "^1.5.1",
    "common-errors": "^0.5.3",
    "lodash": "^3.10.1",
    "ms-amqp-conf": "^0.2.0",
    "ms-amqp-transport": "^0.4.0",
    "ms-validation": "^0.5.7",
    "mservice": "^1.0.0",
    "nconf": "^0.8.2",
    "nodemailer": "^1.10.0",
    "nodemailer-dkim": "^1.0.3",
    "nodemailer-html-to-text": "^1.0.2",
    "nodemailer-plugin-inline-base64": "^1.0.1",
    "nodemailer-smtp-pool": "^1.1.4"
  }
}
