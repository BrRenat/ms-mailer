{
  "name": "ms-mailer",
  "version": "0.1.0",
  "description": "microservice mailer, incorporates nodemailer functionality with a number of useful plugins over smtp pool transport and amqp messageing layer",
  "main": "./lib/index.js",
  "scripts": {
    "prepublish": "babel ./src -d ./lib --source-maps inline --optional es7.objectRestSpread,es7.classProperties,es7.decorators && mkdir -p ./lib/schemas && cp ./src/schemas/*.json ./lib/schemas/",
    "test": "npm rebuild && BLUEBIRD_DEBUG=1 NODE_ENV=production ./node_modules/.bin/mocha --require ./test/babelhook.js --bail --timeout 10000 -R xunit > test-report-$(node -v).xml",
    "test-local": "NODE_ENV=development BLUEBIRD_DEBUG=1 ./node_modules/.bin/mocha --require ./test/babelhook.js"
  },
  "keywords": [
    "microservice",
    "amqp",
    "nodemailer",
    "mailer",
    "smtp"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/makeomatic/ms-mailer.git"
  },
  "author": "Vitaly Aminev <v@makeomatic.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/makeomatic/ms-mailer/issues"
  },
  "homepage": "https://github.com/makeomatic/ms-mailer#readme",
  "devDependencies": {
    "babel-core": "^5.8.33",
    "babel-eslint": "^4.1.3",
    "chai": "^3.4.0",
    "eslint": "^1.8.0",
    "eslint-config-airbnb": "^0.1.0",
    "eslint-plugin-mocha": "^1.0.0",
    "mocha": "^2.3.3",
    "smtp-server": "^1.7.1"
  },
  "dependencies": {
    "bluebird": "^3.0.5",
    "common-errors": "^0.5.3",
    "eventemitter3": "^1.1.1",
    "is-my-json-valid": "^2.12.2",
    "lodash": "^3.10.1",
    "ms-amqp-transport": "^0.2.5",
    "ms-amqp-validation": "^0.1.1",
    "nodemailer": "^1.8.0",
    "nodemailer-dkim": "^1.0.3",
    "nodemailer-html-to-text": "^1.0.2",
    "nodemailer-plugin-inline-base64": "^1.0.1",
    "nodemailer-smtp-pool": "^1.1.3"
  }
}
