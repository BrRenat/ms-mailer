{
  "name": "ms-mailer",
  "description": "microservice mailer, incorporates nodemailer functionality with a number of useful plugins over smtp pool transport and amqp messageing layer",
  "main": "./lib/index.js",
  "version": "0.0.0-development",
  "scripts": {
    "compile": "babel -d ./lib ./src",
    "prepublish": "yarn compile",
    "test": "yarn lint && yarn test:e2e",
    "test:e2e": "yarn compile && mdep test run",
    "lint": "eslint ./src",
    "start": "mfleet",
    "semantic-release": "semantic-release",
    "docker-release": "mdep docker release",
    "release": "yarn --frozen-lockfile && yarn semantic-release",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "preparecommitmsg": "./node_modules/@makeomatic/deploy/git-hooks/prepare-commit-msg $GIT_PARAMS"
  },
  "keywords": [
    "microservice",
    "amqp",
    "nodemailer",
    "mailer",
    "smtp"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/makeomatic/ms-mailer.git"
  },
  "author": "Vitaly Aminev <v@makeomatic.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/makeomatic/ms-mailer/issues"
  },
  "homepage": "https://github.com/makeomatic/ms-mailer#readme",
  "devDependencies": {
    "@babel/cli": "^7.0.0-rc.1",
    "@babel/core": "^7.0.0-rc.1",
    "@babel/plugin-proposal-class-properties": "^7.0.0-rc.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-rc.1",
    "@babel/plugin-transform-strict-mode": "^7.0.0-rc.1",
    "@babel/register": "^7.0.0-rc.1",
    "@makeomatic/deploy": "^7.0.1",
    "@semantic-release/changelog": "^3.0.0",
    "@semantic-release/exec": "^3.0.2",
    "babel-eslint": "^8.2.6",
    "babel-plugin-istanbul": "^5.0.0",
    "chai": "^4.1.1",
    "codecov": "^3.0.4",
    "cross-env": "^5.2.0",
    "eslint": "^5.3.0",
    "eslint-config-makeomatic": "^3.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-promise": "^3.8.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "semantic-release": "^15.9.8",
    "smtp-server": "^3.4.6"
  },
  "dependencies": {
    "@microfleet/core": "^10.9.0",
    "@microfleet/transport-amqp": "^13.1.2",
    "bluebird": "^3.5.1",
    "bunyan": "^1.8.12",
    "common-errors": "^1.0.5",
    "is": "^3.2.0",
    "lodash": "^4.17.10",
    "ms-conf": "^3.1.2",
    "ms-mailer-templates": "^1.5.0",
    "ms-validation": "^7.1.0",
    "nodemailer": "^4.6.7",
    "nodemailer-html-to-text": "^3.0.0",
    "nodemailer-mailgun-transport": "^1.4.0",
    "nodemailer-plugin-inline-base64": "^2.1.1",
    "nodemailer-sparkpost-transport": "^2.1.0",
    "stdout-stream": "^1.4.0",
    "yargs": "^12.0.1"
  },
  "engine": {
    "node": ">= 8.9.0",
    "npm": ">= 5.0.0"
  }
}
